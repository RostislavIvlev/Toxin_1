mixin input(options)
  -
    if(typeof(options) === 'undefined') {
      var options = {};
    }
    var allMods = '';
    if (typeof(options) !== "undefined" && options.mods) {
      var modList = options.mods.split(',');
      for (var i = 0; i < modList.length; i++) {
        allMods = allMods + ' inputWrapper__input_' + modList[i].trim();
      }
    }

  //- 
    mods:             - string -      addition modes. Multiple modes expample: "mode1,mode2,mode3"
    subscribe:        - bool   -      if need subscribe arrow;
    placeholder:      - string -      placeholder;
    formName:         - string -      name for form and input;
    formId:           - string -      id for form and input;

    Example: 
          +input({
            mods: "subscribe",
            placeholder: "Email",
            subscribe: true,
            formId: "subscribe#1",
            formName: "subscribe#1"
          })


  form.inputWrapper(id= options.formId, name= options.formName)
    input.inputWrapper__input(class= allMods, placeholder= options.placeholder)&attributes(attributes)
    if (options.subscribe === true)
      button.inputWrapper__subscribe&attributes(options.attr) arrow_forward
